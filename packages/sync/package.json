{
    "name": "@syncreeper/sync",
    "version": "1.0.0",
    "description": "GitHub repository sync application for SyncReeper",
    "type": "module",
    "main": "dist/bundle.js",
    "scripts": {
        "build": "rollup -c",
        "start": "node dist/bundle.js",
        "start:local": "node --env-file=.env.local dist/bundle.js",
        "dev": "tsx src/index.ts",
        "dev:local": "node --env-file=.env.local --import tsx src/index.ts",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "@octokit/rest": "^21.0.0",
        "proper-lockfile": "^4.1.2",
        "simple-git": "^3.22.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^28.0.0",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.0.0",
        "@rollup/plugin-typescript": "^12.0.0",
        "@types/node": "^20.10.0",
        "@types/proper-lockfile": "^4.1.4",
        "rollup": "^4.0.0",
        "tslib": "^2.8.1",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0"
    }
}

{
    "name": "syncreeper",
    "version": "1.0.0",
    "private": true,
    "description": "Pulumi project to sync GitHub repos across devices via Syncthing on a secured VPS",
    "scripts": {
        "build": "pnpm -r build",
        "build:host": "pnpm --filter @syncreeper/shared build && pnpm --filter @syncreeper/host build",
        "build:sync": "pnpm --filter @syncreeper/sync build",
        "setup": "pnpm --filter @syncreeper/host-utils run setup",
        "get-device-id": "pnpm --filter @syncreeper/host-utils run get-device-id",
        "add-device": "pnpm --filter @syncreeper/host-utils run add-device",
        "sync-now": "pnpm --filter @syncreeper/host-utils run sync-now",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "check": "pnpm run lint && pnpm run format:check && pnpm run build",
        "clean": "pnpm -r clean"
    },
    "keywords": [
        "pulumi",
        "syncthing",
        "github",
        "backup",
        "vps"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.0.0",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "globals": "^15.0.0",
        "prettier": "^3.0.0",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.0.0"
    }
}
